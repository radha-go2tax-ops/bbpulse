# Environment variables for BluBus Pulse backend
# Copy this file to .env and update the values

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/blubuspulse

# API configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_EXPIRE_MINUTES=5
MAX_LOGIN_ATTEMPTS=5

# WhatsApp Configuration
WA_API_URL=https://api.whatsapp.com
WA_API_TOKEN=your-whatsapp-api-token

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# SES Configuration
SES_REGION=us-east-1
SES_SOURCE_EMAIL=noreply@blubus.com
SES_REPLY_TO_EMAIL=support@blubus.com

# S3 Configuration
S3_BUCKET=blubus-operator-docs
S3_UPLOAD_PREFIX=operators
S3_SIGNED_URL_EXPIRY=900
S3_DOWNLOAD_URL_EXPIRY=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Configuration
LOG_LEVEL=INFO

# Email Templates
EMAIL_TEMPLATES_BUCKET=blubus-email-templates

# External services (when you add them)
# MAPS_API_KEY=your_google_maps_api_key
